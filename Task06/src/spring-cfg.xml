<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="wheel" class="SomeWheel">
        <constructor-arg index="0" value="50"/>
        <constructor-arg index="1" value="true"/>
        <constructor-arg index="2" value="true"/>
    </bean>

    <bean id="pedal" class="SomeManualPedal">
        <constructor-arg index="0" value="50"/>
        <constructor-arg index="1" value="true"/>
    </bean>

    <bean id="engine" class="SomeEngine">
        <constructor-arg index="0" value="343"/>
        <constructor-arg index="1" value="360"/>
        <constructor-arg index="2" value="false"/>
    </bean>

    <bean id="transmission" class="SomeTransmission">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="6"/>
        <constructor-arg index="2" value="true"/>
    </bean>
    <bean id="e46" class="BMWM3E46">
        <constructor-arg index="0" ref="wheel"/>
        <constructor-arg index="1" ref="pedal"/>
        <constructor-arg index="2" ref="transmission"/>
        <constructor-arg index="3" ref="engine"/>
    </bean>
    <bean id="new_engine" class="SomeEngine">
        <constructor-arg index="0" value="500"/>
        <constructor-arg index="1" value="700"/>
        <constructor-arg index="2" value="true"/>
    </bean>



</beans>